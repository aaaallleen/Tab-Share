{
    "manifest_version": 3,
    "name": "Tab Share",
    "version": "0.0.1",
    "description": "Allows users to share tabs",
    "permissions": [
      "activeTab",
        "tabs"
    ],
    "background": {
      "service_worker": "src/background.js"
    },
    "action": {
      "default_popup": "src/popup.html",
      "default_icon": {
        "16": "assets/icon.png",
        "48": "assets/icon.png",
        "128": "assets/icon.png"
      }
    },
    "icons": {
      "16": "assets/icon.png",
      "48": "assets/icon.png",
      "128": "assets/icon.png"
    }
  }
   